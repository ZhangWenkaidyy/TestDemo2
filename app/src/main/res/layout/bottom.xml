<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/bottom"
              android:layout_width="match_parent"
              android:layout_height="@dimen/px_250"
              android:background="@drawable/layer1"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/px_250"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bottom_btn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_bottom_1"
                    android:src="@drawable/layer2"
                    android:layout_marginTop="-1.383dp"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_126"/>
                <ImageView
                    android:id="@+id/bottom_img1"
                    android:layout_width="@dimen/px_70"
                    android:layout_height="@dimen/px_62"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/px_16"
                    android:background="#00000000"
                    android:clickable="false"
                    android:src="@drawable/layer35"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/kevinwhite"
                android:textSize="9dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/px_252"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/bottom_btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_bottom_2"
                    android:src="@drawable/layer2"
                    android:layout_marginTop="-1.383dp"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_126"/>
            <ImageView
                android:id="@+id/bottom_img2"
                android:layout_width="@dimen/px_68"
                android:layout_height="@dimen/px_68"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/px_16"
                android:background="#00000000"
                android:clickable="false"
                android:src="@drawable/layer10copy"/>


            </RelativeLayout>

            <TextView

                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Needs Assessment"
                android:textColor="@color/kevinwhite"
                android:textSize="9dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/px_252"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/bottom_btn3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_bottom_3"
                    android:src="@drawable/layer2"
                    android:layout_marginTop="-1.383dp"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_126"/>
            <ImageView
                android:id="@+id/bottom_img3"
                android:layout_width="@dimen/px_70"
                android:layout_height="@dimen/px_62"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/px_16"
                android:background="#00000000"
                android:clickable="false"
                android:visibility="invisible"
                android:src="@drawable/layer35"/>
            </RelativeLayout>

            <TextView

                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="My Order"
                android:textColor="@color/kevinwhite"
                android:textSize="9dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/px_252"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/bottom_btn4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_bottom_4"
                    android:src="@drawable/layer2"
                    android:layout_marginTop="-1.383dp"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_126"/>

            <ImageView
                android:id="@+id/bottom_img4"
                android:layout_width="@dimen/px_68"
                android:layout_height="@dimen/px_68"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/px_16"
                android:background="#00000000"
                android:clickable="false"
                android:visibility="invisible"
                android:src="@drawable/layer10copy"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Service"
                android:textColor="@color/kevinwhite"
                android:textSize="9dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
